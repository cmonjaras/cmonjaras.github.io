---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import Card from "../components/CardPost.astro";
const allPosts = await getCollection("posts");
const pageTitle = "CV";
---

<Layout pageTitle={pageTitle}>
    
<h2> CV </h2>

<p>If you experience issues viewing the following document or would like to download it please click this <a href = "https://github.com/cmonjaras/cmonjaras.github.io/public/monjaras_cv.pdf">link</a> to view the PDF.</p>
   <iframe 
  src="https://docs.google.com/viewer?url=https://github.com/cmonjaras/cmonjaras.github.io/public/monjaras_cv.pdf&embedded=true" 
  width="100%" 
  height="675" 
  style="border:none; margin:35px">
</iframe>




    <h2>Blog</h2>
    <ul role="list" class="link-card-grid">
        {
            allPosts.map((cardPost) => (
                <Card
                    url={`${import.meta.env.BASE_URL}posts/${cardPost.id}/`}
                    image={cardPost.data.image.url}
                    title={cardPost.data.title}
                    date={cardPost.data.date}
                />
            ))
        }
    </ul>
</Layout>
